{% extends "../base.twig" %}

{% block body %}
    <div class="login-container">
        <div class="text-center">
            <h1 class="page-title">Registrate en ChatLearning</h1>
        </div>
        {% if error %}
            <div class="text-center">
                <h2>{{ error }}</h2>
            </div>
        {% endif %}
        {% if success %}
            <div class="text-center">
                <h2>{{ success }}</h2>
            </div>
        {% endif %}
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <form action="/registro" method="post">
                    <div class="form-group">        
                        <label for="username">Nombre de usuario</label>
                    <input class="form-control rounded-input" type="text" name="username" id="username" placeholder="Nombre de usuario" required>
                    </div>    
                    <div class="form-group">
                        <label for="email">Correo electr칩nico</label>
                        <input class="form-control rounded-input" type="text" name="email" id="email" placeholder="Email" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$">
                    </div>    
                    <div class="form-group">
                        <label for="password">Contrase침a</label>
                        <input class="form-control rounded-input" type="password" name="password" id="password" placeholder="Contrase침a" minlength="8" required>
                    </div>    
                    <div class="form-group">
                        <input class="btn base-btn rounded-input" type="submit" value="Enviar">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="text-center">
        <a href="/login">Iniciar sesi칩n</a>
    </div>
{% endblock %}
