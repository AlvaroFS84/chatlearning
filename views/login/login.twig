{% extends "../base.twig" %}

{% block body %}
    <div class="login-container">
        <div class="text-center">
            <h1 class="page-title">Bienvenido a ChatLearning</h1>
        </div>
        {% if error %}
            <div class="text-center">
                <h3>{{ error }}</h3>
            </div>
        {% endif %}
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <form action="/login" method="post">
                    <div class="form-group">
                        <input class="form-control rounded-input" type="text" name="username" id="username" placeholder="Nombre de usuario" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control rounded-input" type="password" name="password" id="password" placeholder="Contraseña" required>
                    </div>
                    <div class="text-center">
                        <input  class="btn base-btn rounded-input" type="submit" value="Iniciar sesión">
                    </div>
                </form>
                <div class="text-center rs-button">
                    <a class="btn base-btn rounded-input" href="/google-signin">Inicia sesión con Google</a>
                </div>
                <div class="text-center rs-button">
                    <a href="/registro">Registrarse</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}